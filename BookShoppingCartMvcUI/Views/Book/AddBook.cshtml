@model BookDTO
@{

}
<div style="width:50%">
    <h2> Add Genre </h2>
    <a asp-action="Index" asp-controller="Book" class="btn btn-primary">Back</a>
    <form asp-action="AddGenre">
        @* <input type="hidden" asp-for="Id" /> *@

        <div class="my-2">
            <label>Book*</label>
            <input type="text" class="form-control" asp-for="BookName" />
            <span asp-validation-for="BookName" class="text-danger"></span>
        </div>

        <div class="my-2">
            <label>Genre*</label>
            <select class="form-control" asp-for="GenreId" asp-items="Model.GenreList">
                <option value="">Select Genre</option>
            </select>
            <span asp-validation-for="GenreId" class="text-danger"></span>
        </div>

        <div class="my-2">
            <button type="submit" class="btn btn-info">Add</button>
        </div>
    </form>
</div>
